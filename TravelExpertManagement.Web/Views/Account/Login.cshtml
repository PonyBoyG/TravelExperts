@model TravelExpertManagement.Data.Models.User

<h2>Login</h2>

<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">

                <form asp-controller="Account" asp-action="Login" method="post">
                    <div class="divider d-flex align-items-center my-4"></div>

                    <div class="form-outline mb-4">
                        <label asp-for="Username" class="form-label" for="Username">Email address</label>
                        <input asp-for="Username" class="form-control form-control-lg" id="Username" placeholder="Enter a valid username" required />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-outline mb-3">
                        <label asp-for="Password" class="form-label" for="Password">Password</label>
                        <input asp-for="Password" type="password" class="form-control form-control-lg" id="Password" placeholder="Enter password" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" value="Authenticate" class="btn btn-primary btn-lg"
                                style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Login
                        </button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>
