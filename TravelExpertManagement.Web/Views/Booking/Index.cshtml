@model List<TravelExpertManagement.Web.ViewModels.BookingViewModel>

@{
    ViewData["Title"] = "My Bookings";
}

<h1>My Bookings</h1>

@if (Model.Count == 0)
{
    <p>No bookings found.</p>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Booking ID</th>
                <th>Booking Date</th>
                <th>Booking Number</th>
                <th>Traveler Count</th>
                <th>Customer ID</th>
                <th>Trip Type ID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var booking in Model)
            {
                <tr>
                    <td>@booking.BookingId</td>
                    <td>@booking.BookingDate?.ToShortDateString()</td>
                    <td>@booking.BookingNo</td>
                    <td>@booking.TravelerCount</td>
                    <td>@booking.CustomerId</td>
                    <td>@booking.TripTypeId</td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-action="Index" asp-controller="Home" class="btn btn-primary">Back to Home</a>
