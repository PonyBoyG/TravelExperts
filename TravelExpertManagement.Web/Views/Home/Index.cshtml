@model List<TravelExpertManagement.Data.Models.Package>



<div class="container mt-5">

    <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
        <ol class="carousel-indicators">
            <li data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active"></li>
            <li data-bs-target="#heroCarousel" data-bs-slide-to="1"></li>
            <li data-bs-target="#heroCarousel" data-bs-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/vacation-one.jpg" class="d-block w-100 hero-carousel-image" alt="Image 1">
                <div class="carousel-caption">
                    <h2 class="xl-font">Find Your</h2>
                    <h2 class="xl-font custom-caption">Dream Vacation</h2>

                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/vacation-two.jpg" class="d-block w-100 hero-carousel-image" alt="Image 2">
                <div class="carousel-caption">
                    <h2 class="xl-font">Find Your</h2>
                    <h2 class="xl-font custom-caption">Dream Vacation</h2>

                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/vacation-three.jpg" class="d-block w-100 hero-carousel-image" alt="Image 3">
                <div class="carousel-caption">
                    <h2 class="xl-font">Find Your</h2>
                    <h2 class="xl-font custom-caption">Dream Vacation</h2>

                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#heroCarousel" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </a>
        <a class="carousel-control-next" href="#heroCarousel" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </a>
    </div>

    <div>
        <h3 class="mt-4 mb-4">Discover Stress-Free Travel</h3>
    </div>

    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <img src="~/images/tower.jpg" class="card-img-top" alt="Bucket List Travel">
                <div class="card-body">
                    <h2 class="card-title text-center">Bucket List</h2>
                    <h2 class="card-title text-center">Vacations</h2>
                    <p class="card-text text-center">Embark on Your Dream Luxury Getaway Vacation Adventure with Expert Planning and Hassle-Free Booking.</p>
                    <p class="card-text fw-bold text-center">YOUR ULTIMATE VACATION AWAITS</p>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card">
                <img src="~/images/beach.jpg" class="card-img-top" alt="Bucket List Travel">
                <div class="card-body">
                    <h2 class="card-title text-center">Beach</h2>
                    <h2 class="card-title text-center">Vacations</h2>
                    <p class="card-text text-center">Indulge in the Perfect Beach Escape - Honeymoon, Family Fun, or Friends' Retreat, Your Ultimate Vacation Awaits!</p>
                    <p class="card-text fw-bold text-center">YOUR ULTIMATE VACATION AWAITS</p>

                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card">
                <img src="~/images/cruise.jpg" class="card-img-top" alt="Bucket List Travel">
                <div class="card-body">
                    <h2 class="card-title text-center">Ocean</h2>
                    <h2 class="card-title text-center">Cruise</h2>
                    <p class="card-text text-center">Set Sail on Your Dream Cruise - Tailored Ocean and River Adventures, Crafted Just for You, for Memories That Last a Lifetime!</p>
                    <p class="card-text fw-bold text-center">YOUR ULTIMATE VACATION AWAITS</p>

                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card">
                <img src="~/images/pyramid.jpg" class="card-img-top" alt="Bucket List Travel">
                <div class="card-body">
                    <h2 class="card-title text-center">Africa</h2>
                    <h2 class="card-title text-center">Vacations</h2>
                    <p class="card-text text-center">Explore the Wonders of Africa - From Safaris on the Serengeti to Relaxing on Exotic Beaches, Embark on the Adventure of a Lifetime!</p>
                    <p class="card-text fw-bold text-center">YOUR ULTIMATE VACATION AWAITS</p>

                </div>
            </div>
        </div>
    </div>
</div>


<h4 class="mt-5 ">Featured Packages</h4>

<div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <div class="card-group">
                <div class="card">
                    <img src="~/images/malaysiaresort.jpg" class="card-img-top w-50 mx-auto" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Malaysian Resort</h5>
                        <p class="card-text">Enjoy All Malaysia Has To Offer!</p>
                        <p class="card-text">$2800</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <div class="card-group">
                <div class="card">
                    <img src="~/images/carribean.jpg" class="card-img-top w-50 mx-auto" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Carribbean NewYear</h5>
                        <p class="card-text">Cruise the Carribean and celebrate the New Year!</p>
                        <p class="card-text">$4800</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            <div class="card-group">
                <div class="card">
                    <img src="~/images/polynesianparadise.jpg" class="card-img-top w-50 mx-auto" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">Polynesian Paradise</h5>
                        <p class="card-text">8 Day All Inclusive Hawaiian Vacation</p>
                        <p class="card-text">$3000</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>



<h4 class="mt-5 ">Browse through our Packages</h4>

<table class="mt-4 table table-striped table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Base Price</th>
            <th>Start Date</th>
            <th>End Date</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var package in Model)
        {
            <tr>
                <td>@package.PkgName</td>
                <td>@package.PkgDesc</td>
                <td>@String.Format("${0:F0}", package.PkgBasePrice)</td>
                <td>@package.PkgStartDate?.ToShortDateString()</td>
                <td>@package.PkgEndDate?.ToShortDateString()</td>
            </tr>
        }

    </tbody>
</table>
