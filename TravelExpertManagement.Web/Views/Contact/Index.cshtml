@model TravelExpertManagement.Web.ViewModels.ContactViewModel

<div class="container mt-5">


    <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
        <ol class="carousel-indicators">
            <li data-bs-target="#heroCarousel" data-bs-slide-to="0" class="active"></li>
            <li data-bs-target="#heroCarousel" data-bs-slide-to="1"></li>
            <li data-bs-target="#heroCarousel" data-bs-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/contact-one.jpg" class="d-block w-100 hero-carousel-image" alt="Image 1">
                <div class="carousel-caption my-custom-caption">
                    <h2 class="xl-font">Plan Your Dream </h2>
                    <h2 class="xl-font my-custom-caption">Escape with Confidence</h2>
                    <button class="my-caption btn-lg">Discover Your Serenity</button>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/contact-two.jpg" class="d-block w-100 hero-carousel-image" alt="Image 2">
                <div class="carousel-caption my-custom-caption">
                    <h2 class="xl-font">Plan Your Dream </h2>
                    <h2 class="xl-font my-custom-caption">Escape with Confidence</h2>
                    <button class="my-caption btn-lg">Discover Your Serenity</button>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/images/contact-three.jpg" class="d-block w-100 hero-carousel-image" alt="Image 3">
                <div class="carousel-caption my-custom-caption">
                    <h2 class="xl-font">Plan Your Dream </h2>
                    <h2 class="xl-font my-custom-caption">Escape with Confidence</h2>
                    <button class="my-caption btn-lg">Discover Your Serenity</button>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#heroCarousel" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </a>
        <a class="carousel-control-next" href="#heroCarousel" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </a>
    </div>

    <h3 class="mt-5">Browse Through Our List of Agencies</h3>
    <table class="mt-4 table table-striped table-hover">
        <thead>
            <tr>
                <th>Agency ID</th>
                <th>Address</th>
                <th>City</th>
                <th>Province</th>
                <th>Postal Code</th>
                <th>Country</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var agency in Model.Agencies)
            {
                <tr>
                    <td>@agency.AgencyId</td>
                    <td>@agency.AgncyAddress</td>
                    <td>@agency.AgncyCity</td>
                    <td>@agency.AgncyProv</td>
                    <td>@agency.AgncyPostal</td>
                    <td>@agency.AgncyCountry</td>
                    <td>@agency.AgncyPhone</td>
                </tr>
            }
        </tbody>
    </table>

    <h3 class="mt-5">Explore Our Team of Travel Agents</h3>
    <table class="mt-4 table table-striped table-hover">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Business Phone</th>
                <th>Position</th>
                <th>Agency ID</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var agent in Model.Agents)
            {
                <tr>
                    <td>@agent.AgtFirstName</td>
                    <td>@agent.AgtLastName</td>
                    <td>@agent.AgtEmail</td>
                    <td>@agent.AgtBusPhone</td>
                    <td>@agent.AgtPosition</td>
                    <td>@agent.AgencyId</td>
                </tr>
            }
        </tbody>
    </table>

    <section class="bg-light text-black py-5">
        <div class="container">
            <h2 class="text-center">Contact Our Team</h2>
            <p class="text-center outro">
                We'd love to hear from you! Whether you have questions, need assistance with planning your next adventure, or want to share your travel experiences, feel free to get in touch with us.
            </p>
            <p class="text-center">
                <strong>Contact Information:</strong><br>
                Phone: 1-800-123-4567<br>
                Email: info@travelexperts.com<br>
                Address: 123 Traveler's Lane, Adventureville, CANADA
            </p>
        </div>
    </section>
</div>
